<%= form_for [topic, post, comment] do |f| %>
  <%= form_group_tag(comment.new[:comment]) do %>
      <%= f.label :comment %>
      <%= f.text_area :comment, rows: 2, class: 'form-control', placeholder: "Enter comment" %>
  <% end %>
    <div class="form-group">
      <%= f.submit "Post", class: 'btn btn-success' %>
    </div>
  <% end %>
